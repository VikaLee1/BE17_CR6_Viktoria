{% extends "base.html.twig" %}

{% block body %} 
<h1>here are some details about the {{ event.name }}</h1>

<div class="card mb-3">
  <img src="{{asset('picture/' ~ event.picture)}}"  class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"></h5>
    <p class="card-text">{{ event.description }}</p>
    <p class="card-text">{{ event.date|date("D, d F Y g:i A") }}</p>
    <p class="card-text">Location: {{ event.city }}</p>
    <p class="card-text"><small class="text-muted">Phone Number: +{{ event.phoneNumber }}</small></p>
    <p class="card-text"><small class="text-muted">Category of an event: {{ event.type }}</small></p>

  </div>
</div>
<a href="{{path('index')}}" class="btn btn-primary">Go back</a>
{% endblock %}